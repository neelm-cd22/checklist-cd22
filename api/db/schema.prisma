datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Task {
  id          Int       @id @default(autoincrement())
  body        String
  description String?
  completed   Boolean
  template    Template? @relation(fields: [templateId], references: [id])
  templateId  Int?
}

model Template {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  tasks       Task[]
}
